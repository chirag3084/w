<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <form name="f1" onsubmit="return details(f1)">
        Enter your mobile number: <input type="tel" id="number" name="mob_number" required>
        <input type="submit" id="ok" value="Submit">
    </form> 
    <script>
        function details(f1) {
            var number = f1.mob_number.value;

            // Check if the number length is 10
            if (number.length === 10) {
                // Check if it starts with 9 or 8
                if (number.charAt(0) === '9' || number.charAt(0) === '8') {
                    alert("Success");
                    return true; // Allow form submission
                } else {
                    alert("Mobile number should start with 9 or 8.");
                    return false; // Prevent form submission
                }
            } else {
                alert("Enter a proper 10-digit number.");
                return false; // Prevent form submission
            }
        }
    </script>
</body>
</html>
